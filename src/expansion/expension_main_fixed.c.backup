#include "../../include/minishell.h"

static char	*allocate_result_buffer(char *str, t_shell *shell)
{
	char	*result;
	int		size;

	size = ft_strlen(str) * 10 + 1024;
	result = malloc(size);
	if (!result)
		return (NULL);
	ft_memset(result, 0, size);
	return (result);
}

static void	handle_quote_markers(char c, int *in_single_quotes)
{
	if (c == '\001')
		*in_single_quotes = 1;
	else if (c == '\003')
		*in_single_quotes = 0;
}

static int	should_copy_char(char c)
{
	return (c != '\002' && c != '\004');
}

static char	*add_space_if_needed(char *dst, char *src, int *last_was_var)
{
	if (*last_was_var && *src && *src != ' ' && *src != '\t')
	{
		*dst++ = ' ';
		*last_was_var = 0;
	}
	return (dst);
}

char	*expand_variables(char *str, t_shell *shell)
{
	char	*result;
	char	*src;
	char	*dst;
	int		in_single_quotes;
	int		last_was_var;

	result = allocate_result_buffer(str, shell);
	if (!result)
		return (NULL);
	src = str;
	dst = result;
	in_single_quotes = 0;
	last_was_var = 0;
	while (*src)
	{
		handle_quote_markers(*src, &in_single_quotes);
		if (*src == '$' && !in_single_quotes)
		{
			dst = expand_dollar(&src, dst, shell);
			last_was_var = 1;
		}
		else if (should_copy_char(*src))
		{
			dst = add_space_if_needed(dst, src, &last_was_var);
			*dst++ = *src;
		}
		if (*src)
			src++;
	}
	*dst = '\0';
	return (result);
}
