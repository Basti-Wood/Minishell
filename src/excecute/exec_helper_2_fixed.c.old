#include "../include/minishell.h"

int	get_argc(char **argv)
{
	int	count;

	count = 0;
	if (!argv)
		return (0);
	while (argv[count])
		count++;
	return (count);
}

int	save_file_descriptors(int *saved_stdin, int *saved_stdout)
{
	*saved_stdin = dup(STDIN_FILENO);
	*saved_stdout = dup(STDOUT_FILENO);
	if (*saved_stdin == -1 || *saved_stdout == -1)
		return (-1);
	return (0);
}

void	restore_file_descriptors(int saved_stdin, int saved_stdout)
{
	if (saved_stdin >= 0)
	{
		dup2(saved_stdin, STDIN_FILENO);
		close(saved_stdin);
	}
	if (saved_stdout >= 0)
	{
		dup2(saved_stdout, STDOUT_FILENO);
		close(saved_stdout);
	}
}

int	execute_command(t_cmd *cmd, t_shell *shell)
{
	int	saved_stdin;
	int	saved_stdout;
	int	result;

	if (!cmd)
	{
		return (0);
	}
	if (cmd->argv)
	{
		shift_argv(&cmd->argv);
		if (!cmd->argv[0])
			return (0);
	}
	/* For builtins we must apply redirections in the parent so they affect output
		of the builtin. For external commands we apply redirs in the child. */
	if (is_builtin(cmd->argv[0]))
	{
		saved_stdin = dup(STDIN_FILENO);
		saved_stdout = dup(STDOUT_FILENO);
		if (saved_stdin == -1 || saved_stdout == -1)
		{
			perror("Failed to save file descriptors");
			return (1);
		}
		if (handle_redirections_in_order(cmd) == 0)
			result = execute_builtin(cmd, shell);
		else
			result = 1;
		restore_file_descriptors(saved_stdin, saved_stdout);
		return (result);
	}
	else
	{
		return (execute_external_command(cmd, shell));
	}
}

int	handle_redirections_in_order(t_cmd *cmd)
{
	t_redir	*current;

	if (!cmd)
		return (0);
	// Process all redirections in order first
	current = cmd->redirs;
	while (current)
	{
		if (handle_single_redirection(current) == -1)
			return (-1);
		current = current->next;
	}
	// Handle heredoc after other redirections (it has lower priority)
	if (cmd->heredoc > 0)
	{
		if (dup2(cmd->heredoc, STDIN_FILENO) == -1)
		{
			perror("dup2 heredoc");
			close(cmd->heredoc);
			return (-1);
		}
		close(cmd->heredoc);
		cmd->heredoc = -1;
	}
	return (0);
}
